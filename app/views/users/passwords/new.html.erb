

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
                       html: { method: :post, class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-header" >Forgot your password?</h2>
  <div class="field">
    <%= f.email_field :email, autofocus: true,
                              class: "form-control",
                              placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",
                  class: "btn btn-large btn-primary btn-block" %>
  </div>
  <%= render "users/shared/links" %>
<% end %>
