<%= form_for(current_user.likes.find_by(likeable: likeable),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.hidden_field :likeable_id, value: likeable.id %>
  <%= f.hidden_field :likeable_type, value: likeable.class.name %>
  <%= f.submit "Unlike", class: 'btn btn-primary' %>
<% end %>
