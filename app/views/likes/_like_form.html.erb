<!-- When more advanced, add AJAX to automatically update
     the like/unlike buttons -->
<%= pluralize(likeable.likes.count, "like") %>
<% if current_user.like?(likeable) %>
  <%= render partial: 'likes/unlike', locals: { likeable: likeable } %>
<% else %>
  <%= render partial: 'likes/like', locals: { likeable: likeable } %>
<% end %>
