<div class="comment">
  <h3><%= comment.user.name %></h3>
  <p><%= comment.content %></p>
  <strong>Posted <%= time_ago_in_words(comment.created_at) %> ago</strong>
  <%= pluralize(comment.likes.count, "like") %>
  <%= render partial: 'likes/like_form', locals: { likeable: comment } %>
  <% if current_user?(comment.user) %>
    <%= link_to "delete comment", comment_path(comment.id), method: :delete %>
  <% end %>
</div>
